{
   "env": {
      "browser": true,
      "amd": "true,",
      "es6": "true,",
      "node": true
   },
   "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
   ],
   "settings": {
     "react": {
           "version": "detect"
        }
  	},
  	"plugins": ["react"],
   "parserOptions": {
      "parser": "babel-eslint",
      "sourceType": "module",
      "ecmaFeatures": {
         "jsx": true,
         "modules": true
      },
      "ecmaVersion": 11
   },
   "rules": {
      "no-unused-vars": 1,
      "key-spacing": [
         "error",
         {
            "beforeColon": false,
            "afterColon": true
         }
      ],
      "indent": [
         "error",
         "tab"
      ],
      "linebreak-style": [
         "error",
         "unix"
      ],
      "quotes": [
         "error",
         "single"
      ],
      "semi": [
         "error",
         "always"
      ],
      "react/jsx-indent-props": [
         "error",
         "tab"
      ],
      "react/jsx-indent": [
         "error",
         "tab"
	 ],
	  "react/jsx-equals-spacing": [
		  2,
		  "never"
	  ],
	  "react/jsx-curly-spacing": [
		  2,
		  "never"
	  ]
   }
}
